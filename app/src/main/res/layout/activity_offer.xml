<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OffersActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:id="@+id/cash_section"
        >
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/balance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total balance"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            />
        <TextView
            android:id="@+id/cash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cash available"
            android:textColor="@color/grey1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/balance_title"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/da_tag"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/grey1"
            android:text="DA"
            android:layout_marginTop="30sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/cash_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="450,00"
            android:textSize="32sp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/da_tag"
            android:layout_marginRight="5dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fuel_title"
        android:text="Select your fuel"
        app:layout_constraintTop_toBottomOf="@+id/cash_section"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="25sp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fuel_types_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fuel_title"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:id="@id/type1"
            android:paddingLeft="10dp"
            >
            <RelativeLayout
                android:id="@+id/ring2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ring_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal Gasoline"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/grey1"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/ring2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/unselected_car"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="1.15 DA/L"
                    android:textColor="@color/grey1"
                    android:textSize="20sp" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10sp"
            android:id="@+id/type2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:clickable="true"
            android:paddingLeft="10sp"
            >
            <RelativeLayout
                android:id="@+id/ring"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ring_blue"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Gasoline"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/blueNaftal"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/ring"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/selected_card"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="1.15 DA/L"
                    android:textColor="@color/yellowNaftal"
                    android:textSize="20sp"
                    />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/type3"
            android:paddingLeft="10sp"
            >
            <RelativeLayout
                android:id="@+id/ring3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ring_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Unleaded Gasoline"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/grey1"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/ring3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/unselected_car"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="1.15 DA/L"
                    android:textColor="@color/grey1"
                    android:textSize="20sp" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/type4"
            android:paddingLeft="10sp"
            >
            <RelativeLayout
                android:id="@+id/ring4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ring_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diesel fuel"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/grey1"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/ring4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/unselected_car"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="1.15 DA/L"
                    android:textColor="@color/grey1"
                    android:textSize="20sp" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/type4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="15dp"
            android:clickable="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/type5"
            android:paddingLeft="10sp"
            >
            <RelativeLayout
                android:id="@+id/ring5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ring_grey"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LPG/C"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/grey1"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                app:layout_constraintStart_toEndOf="@id/ring5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/unselected_car"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppinsmedium"
                    android:text="1.15 DA/L"
                    android:textColor="@color/grey1"
                    android:textSize="20sp" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/select_amount_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your amount"
        app:layout_constraintTop_toBottomOf="@+id/fuel_types_section"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="25sp"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/select_amount_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="15dp"
        >
        <RelativeLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_container"
            >

            <TextView
                android:id="@+id/price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:text="Price"
                android:textColor="@color/grey1"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_title"
                android:layout_marginTop="10dp"
                android:background="@drawable/price_container"
                android:padding="5dp"
                android:gravity="center_vertical"
                >
                <RelativeLayout
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/up_button"
                    android:gravity="center"
                    android:background="@drawable/up_n_down_container"
                    android:layout_marginRight="5dp"
                    >

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/upload" />
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotomedium"
                    android:text="1000,00 DA"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />
                <RelativeLayout
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/down_button"
                    android:gravity="center"
                    android:background="@drawable/up_n_down_container"
                    android:rotation="180"
                    android:layout_marginLeft="5dp"
                    >

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/upload" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/price_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pail"
            >

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="94dp"
                android:layout_height="69dp"
                android:progress="20"
                android:rotation="-90"
                android:progressBackgroundTint="@color/blueNaftal"
                android:progressTint="@color/yellowNaftal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/pail_img"
                android:layout_width="69dp"
                android:layout_height="94dp"
                android:src="@drawable/pail" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>